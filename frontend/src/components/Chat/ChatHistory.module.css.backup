/* Container */
.chatHistory {
  display: flex;
  flex-direction: column;
  height: 100%;
  min-height: 0;
  background: linear-gradient(to bottom, #f8f9fa, #ffffff);
  overflow: hidden;
  flex: 1 1 0;
}

:global(.dark) .chatHistory {
  background: linear-gradient(to bottom, #1a1d24, #12151a);
}

/* Conversations list */
.conversationsList {
  flex: 1 1 0;
  min-height: 0;
  overflow-y: auto;
  padding: 15px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.conversationItem {
  padding: 15px;
  background: white;
  border: 2px solid #e9ecef;
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  gap: 12px;
  position: relative;
}

.conversationItem:hover {
  border-color: #f7b186;
  background: #fff8f4;
  transform: translateX(4px);
}

:global(.dark) .conversationItem {
  background: #2a2d35;
  border-color: rgba(255, 255, 255, 0.15);
}

:global(.dark) .conversationItem:hover {
  background: #33363e;
  border-color: #f7b186;
}

.convProfileImage {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  object-fit: cover;
  border: 2px solid #e9ecef;
  flex-shrink: 0;
  transition: all 0.2s ease;
}

.conversationItem:hover .convProfileImage {
  border-color: #f7b186;
  transform: scale(1.05);
}

.convContent {
  display: flex;
  flex-direction: column;
  gap: 6px;
  flex: 1;
  min-width: 0;
}

.convHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.convTitle {
  font-size: 0.9rem;
  font-weight: 600;
  color: #333;
}

:global(.dark) .convTitle {
  color: #e9ecf1;
}

.convDate {
  font-size: 0.75rem;
  color: #999;
}

.convPreview {
  margin: 0;
  font-size: 0.85rem;
  color: #666;
  line-height: 1.4;
}

:global(.dark) .convPreview {
  color: #999;
}

/* Empty state */
.emptyState {
  text-align: center;
  padding: 40px 20px;
  color: #999;
}

.emptyState p {
  margin: 8px 0;
  font-size: 0.95rem;
}

.emptyHint {
  font-size: 0.85rem !important;
  opacity: 0.8;
}

.loginLink {
  display: inline-block;
  margin-top: 12px;
  padding: 8px 20px;
  background: linear-gradient(135deg, #b8ddd1, #f7b186);
  color: white;
  text-decoration: none;
  border-radius: 20px;
  font-weight: 600;
  font-size: 0.9rem;
  transition: all 0.2s ease;
}

.loginLink:hover {
  transform: scale(1.05);
  box-shadow: 0 4px 12px rgba(247, 177, 134, 0.3);
}

/* New message section */
.newMessageSection {
  padding: 15px;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-top: 1px solid rgba(0, 0, 0, 0.08);
  box-shadow: 0 -2px 12px rgba(0, 0, 0, 0.05);
}

:global(.dark) .newMessageSection {
  background: rgba(26, 29, 36, 0.95);
  border-top-color: rgba(255, 255, 255, 0.1);
  box-shadow: 0 -2px 12px rgba(0, 0, 0, 0.3);
}

.newMessageForm {
  display: flex;
  gap: 10px;
  align-items: center;
}

.newMessageInput {
  flex: 1;
  padding: 12px 16px;
  border: 2px solid #e9ecef;
  border-radius: 24px;
  font-size: 0.95rem;
  outline: none;
  transition: all 0.3s ease;
  background: white;
  font-family: inherit;
}

.newMessageInput:focus {
  border-color: #f7b186;
  box-shadow: 0 0 0 3px rgba(247, 177, 134, 0.1);
}

.newMessageInput:disabled {
  background: #f8f9fa;
  cursor: not-allowed;
  opacity: 0.6;
}

:global(.dark) .newMessageInput {
  background: #2a2d35;
  border-color: rgba(255, 255, 255, 0.15);
  color: #e9ecf1;
}

:global(.dark) .newMessageInput:focus {
  border-color: #f7b186;
  box-shadow: 0 0 0 3px rgba(247, 177, 134, 0.15);
}

:global(.dark) .newMessageInput:disabled {
  background: #1a1d24;
  opacity: 0.5;
}

.sendBtn {
  width: 44px;
  height: 44px;
  border-radius: 50%;
  border: none;
  background: linear-gradient(135deg, #b8ddd1, #f7b186);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  flex-shrink: 0;
  padding: 0;
  box-shadow: 0 2px 8px rgba(247, 177, 134, 0.25);
}

.sendBtn:hover:not(:disabled) {
  transform: scale(1.1) rotate(5deg);
  box-shadow: 0 6px 16px rgba(247, 177, 134, 0.4);
}

.sendBtn:active:not(:disabled) {
  transform: scale(0.95);
}

.sendBtn:disabled {
  opacity: 0.4;
  cursor: not-allowed;
  background: #ccc;
}

/* Sections */
.pinnedSection,
.matchesSection {
  margin-bottom: 20px;
}

.matchesSection {
  padding-top: 15px;
  border-top: 1px solid rgba(0, 0, 0, 0.08);
}

:global(.dark) .matchesSection {
  border-top-color: rgba(255, 255, 255, 0.1);
}

.sectionHeader {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10px;
  padding: 0 5px;
  font-size: 0.8rem;
  font-weight: 700;
  color: #666;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

:global(.dark) .sectionHeader {
  color: #999;
}

.badge {
  background: var(--couleur-bouton-action, #f7b186);
  color: white;
  padding: 2px 8px;
  border-radius: 10px;
  font-size: 0.7rem;
  font-weight: 600;
}

.pinnedItem {
  background: linear-gradient(135deg, rgba(184, 221, 209, 0.1), rgba(247, 177, 134, 0.1));
  border-color: rgba(247, 177, 134, 0.3);
}

:global(.dark) .pinnedItem {
  background: linear-gradient(135deg, rgba(184, 221, 209, 0.05), rgba(247, 177, 134, 0.05));
  border-color: rgba(247, 177, 134, 0.2);
}

.unreadBadge {
  position: absolute;
  top: 12px;
  right: 12px;
  background: #dc3545;
  color: white;
  padding: 3px 7px;
  border-radius: 10px;
  font-size: 0.7rem;
  font-weight: 700;
}

.conversationItem {
  position: relative;
}

.emptyHint {
  text-align: center;
  padding: 20px;
  color: #999;
  font-size: 0.85rem;
  font-style: italic;
}

.emptyHint p {
  margin: 0;
}

/* Scrollbar */
.conversationsList::-webkit-scrollbar {
  width: 6px;
}

.conversationsList::-webkit-scrollbar-track {
  background: #f0f0f0;
}

.conversationsList::-webkit-scrollbar-thumb {
  background: #f7b186;
  border-radius: 3px;
}

.conversationsList::-webkit-scrollbar-thumb:hover {
  background: #e8a575;
}
