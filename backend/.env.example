# MongoDB
MONGO_URI=mongodb://localhost:27017
MONGO_USER=
MONGO_PASS=

# Server
PORT=5000
FRONT_URL=http://localhost:5173

# JWT
JWT_SECRET=your_jwt_secret_here

# Chiffrement des messages (AES-256-GCM)
# Utiliser une chaîne aléatoire longue et unique (min 32 caractères)
# Exemple de génération: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_SECRET=your_encryption_secret_here_min_32_chars

# SMTP Configuration (pour newsletters)
SMTP_HOST=contact.harmonith@gmail.com
SMTP_PORT=587
SMTP_USER=contact.harmonith@gmail.com
SMTP_PASS=your_smtp_password_here

# Email settings
EMAIL_FROM=noreply@harmonith.com

# reCAPTCHA v3
RECAPTCHA_SECRET_KEY=***************
RECAPTCHA_DISABLED=false

# Stripe (Paiements & Abonnements)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PRICE_ID=price_...
STRIPE_WEBHOOK_SECRET=whsec_...
FRONTEND_BASE_URL=http://localhost:5173

# OpenAI (Chatbot - OPTIONNEL)
# Si non défini, le chatbot utilisera des réponses prédéfinies
OPENAI_API_KEY=sk-...

# Push Notifications (VAPID)
# Générer avec: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:contact@yourapp.com

# Google OAuth (pour connexion Google mobile/web)
# Obtenir depuis Google Cloud Console > APIs & Services > Credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
